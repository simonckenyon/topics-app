<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="ie.koala.topics">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />

    <application
        android:name=".app.TopicsApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".feature.topic.TopicListActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".feature.welcome.WelcomeActivity" />
        </activity>
        <activity
            android:name=".feature.topic.TopicDetailActivity"
            android:label="@string/title_topic_detail"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName=".feature.topic.TopicListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".feature.topic.TopicListActivity" />
        </activity>
        <activity
            android:name=".feature.welcome.WelcomeActivity"
            android:label="@string/title_activity_main"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".feature.auth.SignInActivity"
            android:label="@string/title_activity_sign_in"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName=".feature.welcome.WelcomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".feature.welcome.WelcomeActivity" />
        </activity>
        <activity
            android:name=".feature.auth.SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName=".feature.welcome.WelcomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".feature.welcome.WelcomeActivity" />
        </activity>
        <activity
            android:name=".feature.auth.ResetPasswordActivity"
            android:label="@string/title_activity_reset_password"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName=".feature.welcome.WelcomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".feature.welcome.WelcomeActivity" />
        </activity>
        <activity
            android:name=".feature.topic.TopicEditActivity"
            android:label="@string/title_activity_topic_edit"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName=".feature.topic.TopicDetailActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".feature.topic.TopicDetailActivity" />
        </activity>
        <activity
            android:name=".feature.settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName=".feature.welcome.WelcomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ie.koala.topics.feature.welcome.WelcomeActivity" />
        </activity>
    </application>

</manifest>