<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ie.koala.topics">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />

    <application
        android:name=".app.TopicsApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".app.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".feature.animal.AnimalActivity"
            android:label="@string/activity_animals"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".app.MainActivity" />
        </activity>
        <activity
            android:name=".feature.user.UserActivity"
            android:label="@string/activity_users"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".app.MainActivity" />
        </activity>
        <activity
            android:name=".feature.topic.TopicListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".app.MainActivity" />
        </activity>
        <activity
            android:name=".feature.topic.TopicDetailActivity"
            android:label="@string/title_topic_detail"
            android:parentActivityName=".feature.topic.TopicListActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".feature.topic.TopicListActivity" />
        </activity>
        <activity
            android:name=".auth.SignInActivity"
            android:label="@string/title_activity_sign_in"
            android:parentActivityName=".app.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".app.MainActivity" />
        </activity>
        <activity
            android:name=".auth.SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:parentActivityName=".app.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".app.MainActivity" />
        </activity>
        <activity
            android:name=".auth.ResetPasswordActivity"
            android:label="@string/title_activity_reset_password"
            android:parentActivityName=".app.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".app.MainActivity" />
        </activity>
        <activity
            android:name=".feature.topic.TopicEditActivity"
            android:label="@string/title_activity_topic_edit"
            android:parentActivityName=".feature.topic.TopicDetailActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".feature.topic.TopicDetailActivity" />
        </activity>
        <activity
            android:name=".feature.topic.TopicAddActivity"
            android:label="@string/title_activity_topic_add"
            android:parentActivityName=".feature.topic.TopicListActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".feature.topic.TopicListActivity" />
        </activity>
        <activity
            android:name=".preferences.PreferencesActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".app.MainActivity"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ie.koala.topics.app.MainActivity" />
        </activity>
        <activity
            android:name=".feature.github.ui.GithubActivity"
            android:label="@string/activity_search_github"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".app.MainActivity" />
        </activity>
    </application>

</manifest>
